{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "importHelpers": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "exclude": ["node_modules", "dist"]
}